<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane styleClass="container" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.amal.amalproject.controllers.LoginController"
          minWidth="1000.0"
          minHeight="800.0"
          maxWidth="Infinity"
          maxHeight="Infinity"
          prefWidth="1000.0"
          prefHeight="800.0"
>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="500.0" prefWidth="500.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="500.0" prefWidth="500.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="800.0" prefHeight="800.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Pane styleClass="left-pane"
              GridPane.columnIndex="0"
              GridPane.rowIndex="0"
              minWidth="500.0"

              prefWidth="500.0">
        </Pane>

<!--    <fx:define>-->
<!--        <RequiredField fx:id="requiredField1" >-->
<!--            <srcControl>-->
<!--                <fx:reference source="usernameID"></fx:reference>-->
<!--            </srcControl>-->
<!--        </RequiredField>-->
<!--        <RequiredField fx:id="requiredField2" >-->
<!--            <srcControl>-->
<!--                <fx:reference source="passwordID"></fx:reference>-->
<!--            </srcControl>-->
<!--        </RequiredField>-->
<!--    </fx:define>-->

        <VBox styleClass="right-pane-container"
              GridPane.columnIndex="1"
              GridPane.rowIndex="0"
              alignment="CENTER"
              spacing="10"
              minWidth="500.0"
              maxWidth="Infinity"
              prefWidth="500.0"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0"/>
            </padding>
            <VBox.margin>
                <Insets bottom="50.0" top="50.0" />
            </VBox.margin>
            <children>

                <ImageView styleClass="logo" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/logo.jpg" />
                    </image>
                </ImageView>
                <!--                textAlignment="CENTER" contentDisplay="CENTER"-->
                <Label styleClass="sign-in-label"
                       text="Sing In"

                       minWidth="250.0"
                       maxWidth="Infinity"
                       prefWidth="250.0"
                       minHeight="80.0"
                       maxHeight="Infinity"

                       nodeOrientation="LEFT_TO_RIGHT"

                />

                <Label styleClass="username-label"
                       text="Email or Username"
                       maxHeight="Infinity"
                       maxWidth="Infinity"
                       minHeight="50.0"
                       minWidth="250"
                       nodeOrientation="LEFT_TO_RIGHT"
                       prefWidth="250"
                />

                <TextField promptText="Enter your username or email address" styleClass="username-field" fx:id="usernameID" />
                <!--            <ErrorLabel message="Please enter your username">-->
                <!--                <validator>-->
                <!--                    <fx:reference source="requiredField1"></fx:reference>-->
                <!--                </validator>-->
                <!--            </ErrorLabel>-->

                <Label styleClass="error-label"
                       minHeight="-Infinity"
                       maxHeight="Infinity"
                       prefHeight="0.0"

                       minWidth="400.0"
                       maxWidth="Infinity"
                       prefWidth="400.0"
                       fx:id="usernameErrorMessageID"
                       nodeOrientation="LEFT_TO_RIGHT"
                />

                <Label styleClass="password-label"
                       text="Password"
                       maxHeight="Infinity"
                       maxWidth="Infinity"
                       minWidth="250"
                       nodeOrientation="LEFT_TO_RIGHT"
                       prefWidth="250"
                />
                <PasswordField
                        promptText="Enter your password"
                        fx:id="passwordID"
                />

                <Label styleClass="error-label"
                       minHeight="-Infinity"
                       maxHeight="Infinity"
                       prefHeight="0.0"
                       minWidth="400.0"
                       maxWidth="Infinity"
                       prefWidth="400.0"
                       fx:id="passwordErrorMessageID"
                       nodeOrientation="LEFT_TO_RIGHT"
                />

                <ButtonBar styleClass="button-bar" prefHeight="40.0" prefWidth="Infinity">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <buttons>
                        <Button styleClass="button-login" prefWidth="200.0" text="LogIn" onAction="#onLoginClick" />
                        <Hyperlink styleClass="button-forgot-password" text="Forgot Password?" onAction="#onForgotPasswordClick" />
                    </buttons>
                </ButtonBar>
                <Hyperlink text="Register" onAction="#onInscriptionClick" />
            </children>
        </VBox>
    </children>
</GridPane>