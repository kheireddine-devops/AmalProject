<BorderPane styleClass="container" fx:controller="com.amal.amalproject.controllers.CompteController"  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18">
    <top>
        <VBox styleClass="add-doctor-header">
            <Label text=""></Label>
        </VBox>
    </top>
    <center>
        <GridPane hgap="10.0" styleClass="add-doctor-forms">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>

                <Label text="Nom *" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField promptText="Tapez votre nom" fx:id="firstNameID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Prénom *" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField promptText="Tapez votre prénom" fx:id="lastNameID" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Nom d'utilisateur" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField promptText="Tapez votre username" fx:id="loginID" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Mot de passe" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <PasswordField promptText="Tapez votre Mot de passe" fx:id="passwordID" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Adresse mail *" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField promptText="Tapez votre adresse mail" fx:id="emailID" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Sexe" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <HBox styleClass="radio-sexe" alignment="CENTER_LEFT" spacing="10.0" nodeOrientation="LEFT_TO_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3" >
                    <children>
                        <RadioButton mnemonicParsing="false" fx:id="maleRadioID" text="Male" userData="GENDER_MALE" BorderPane.alignment="CENTER">
                            <toggleGroup>
                                <ToggleGroup fx:id="sexeGroupID"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" fx:id="femaleRadioID" text="Female" userData="GENDER_FEMALE" BorderPane.alignment="CENTER">
                            <toggleGroup>
                                <fx:reference source="sexeGroupID"/>
                            </toggleGroup>
                        </RadioButton>
                    </children>
                </HBox>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="4" text="Date de naissance"/>
                <DatePicker promptText="Tapez votre date de naissance" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity" fx:id="dateNaissanceID" />

                <Label GridPane.columnIndex="0" GridPane.rowIndex="5" text="Téléphone Mobile *"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="telephoneID" promptText="Tapez votre numéro mobile"/>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="6" text="Adresse"/>
                <TextField promptText="Tapez votre adresse professionnelle" GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="adresseID"/>

                <Label text="Spécialité *"  GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <ComboBox promptText="Sélectionnez votre spécialité" GridPane.columnIndex="3" GridPane.rowIndex="3" fx:id="specialiteID" maxWidth="Infinity" prefWidth="150.0" BorderPane.alignment="CENTER" >
                    <items>
                        <FXCollections fx:factory="observableArrayList">
<!--                            <String fx:value="Sélectionnez votre spécialité"/>-->
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="CIN" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <TextField promptText="Tapez votre numéro C.I.N" fx:id="cinID" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

                <Label text="Matricule" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                <TextField promptText="Tapez votre assurance" fx:id="matriculeID" GridPane.columnIndex="3" GridPane.rowIndex="5"/>

                <Label text="Assurance" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                <ComboBox promptText="Sélectionner votre assurance" GridPane.columnIndex="3" GridPane.rowIndex="6" fx:id="assuranceID" maxWidth="Infinity" prefWidth="150.0" BorderPane.alignment="CENTER" >
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ASSURANCE 1"/>
                            <String fx:value="ASSURANCE 2"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </GridPane>
    </center>
    <bottom>
        <ButtonBar styleClass="add-doctor-buttons">
            <buttons>
                <Button mnemonicParsing="false" text="S'inscrire" onAction="#onAddDoctorClick"/>
            </buttons>
        </ButtonBar>
